CC	= gcc
CFLAGS	= -Wall -Werror -g -O0 -std=gnu11 
LDFLAGS = -L. 

pebble-notecard: pebble-notecard.o 
	$(CC) $(CFLAGS) -o $@ $^

pebble-notecard.o: pebble-notecard.c pebble-notecard
	$(CC) $(FLAGS) -o $@ -c hmds.c
	
../hdb/hdb.o: ../hdb/hdb.c ../hdb/hdb.h
	$(CC) $(CFLAGS) -o $@ -c ../hdb/hdb.c

../common/client_hmds_tools.o: ../common/client_hmds_tools.c ../common/client_hmds_tools.h
	$(CC) $(CFLAGS) -o ../common/client_hmds_tools.o -c ../common/client_hmds_tools.c 
	
clean:
	$(RM) hmds *.o *~ ../common/*.o ../common/*~ ../hdb/*.o ../hdb/*~


	

